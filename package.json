{
  "name": "template",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "yarn lint && tsc",
    "lint": "npx eslint . --fix",
    "watch": "tsc-watch --onSuccess \"yarn watch:start\"",
    "watch:start": "yarn lint && yarn start",
    "start": "node --import=extensionless/register .",
    "dev": "yarn build && yarn start"
  },
  "eslintConfig": {
    "extends": "@sapphire"
  },
  "type": "module",
  "devDependencies": {
    "@sapphire/eslint-config": "^5.0.1",
    "@sapphire/ts-config": "^4.0.1",
    "@types/node": "^20.4.10",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@skyra/logger": "^2.0.3",
    "extensionless": "^1.5.6"
  },
  "engines": {
    "node": "21.x"
  }
}